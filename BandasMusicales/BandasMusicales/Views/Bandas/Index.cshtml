@model IEnumerable<BandasMusicales.Models.Banda>

@{
    ViewData["Title"] = "Bandas";
}

<h1>Lista de Bandas</h1>

<p>
    <a asp-action="create" class="btn-success">Nuevo</a>

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.BandaName)
                </th>
                <th></th>
            </tr>

        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.BandaName)</td>
                    <td>
                        <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.BandaId">Editar</a>
                        <a asp-action="Details" class="btn btn-success" asp-route-id="@item.BandaId">Detalles</a>
                        <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.BandaId">Borrar</a>

                    </td>
                </tr>
            }
        </tbody>
    </table>

</p>